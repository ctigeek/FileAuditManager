<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <appSettings>
    <add key="ListenUrl" value="http://*:8080/" />
    <add key="UseWindowsAuth" value="false"/>
    <!-- Anything less than 60 seconds will turn off the audit timer. -->
    <add key="AuditTimerInMilliseconds" value="60000"/>
    <add key="AuditEmailToAddress" value="steven.swenson@mailtrust.com"/>
    <add key="AuditEmailFromAddress" value="noreply@mailtrust.com"/>
    <add key="MailgunUrl" value=""/>
    <add key="MailgunApiKey" value=""/>
    <add key="SendMailOnAuditFailure" value="true"/>
  </appSettings>
  <connectionStrings>
    <add name="fileaudit" connectionString="mongodb://localhost:27017/FileAuditManager?ssl=false" />
  </connectionStrings>
  <log4net>
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <applicationName value="FileAuditManager" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="WARN" />
      <appender-ref ref="EventLogAppender" />
    </root>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6" />
  </startup>
</configuration>